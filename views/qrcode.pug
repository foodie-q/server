doctype html
html
    head
        meta(charset='utf-8')
        meta(name= 'viewport', content= 'width=device-width, initial-scale=1,shrink-to-fit=no')
        meta(name= 'description', content=(meta_description ? meta_description : webname))

        //windows
        meta(name='application-name', content=webname + (title ? ' | ' + title : ''))
        meta(name='msapplication-TileColor', content='#bf1f2d')
        meta(name='theme-color', content='#bf1f2d')


        //og
        meta(property='og:title', content=webname + (title ? ' | ' + title : ''))
        meta(property='og:site_name', content=webname)
        meta(property='og:url', content='')
        meta(property='og:image', content=(meta_image ? meta_image : ''))
        meta(property='og:image:width', content='480')
        meta(property='og:image:height', content='320')
        meta(property='og:image:alt', content=(meta_image_alt ? meta_image_alt : webname))
        meta(http-equiv='X-UA-Compatible', content='IE=edge')

        //aple
        meta(name='apple-mobile-web-app-title', content=webname + (title ? ' | ' + title : ''))
        link(rel='apple-touch-startup-image', href='/images/icon.png')

        link(rel='icon', sizes='192x192', href='/images/icon.png')


        style.
            html, body {
                min-height: 100vh;
            }

    body
        img(src=img, width=400, height=400)

